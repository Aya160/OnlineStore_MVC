<section class="login_box_area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <div class="hover">
                        <h4>Supplier</h4>
                        <p>There are advances being made in science and technology everyday, and a good example of this is the</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner register_form_inner">
                    <h3> Add Supplier</h3>
                    <form class="row login_form" asp-action="Create" id="register_form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input asp-for="SupplierName" class="form-control" placeholder="Supplier Name"
                                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Supplier Name'">
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email Address"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="PhoneNO" class="form-control" placeholder="Phone Number"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Phone Number'">
                            <span asp-validation-for="PhoneNO" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="MaterialSupplied" class="form-control" placeholder="Materials supplied"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Materials supplied'">
                            <span asp-validation-for="MaterialSupplied" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="creat_account">
                                <input type="checkbox" id="f-option2" name="selector">
                                <label for="f-option2">Keep me logged in</label>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-register w-100">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
