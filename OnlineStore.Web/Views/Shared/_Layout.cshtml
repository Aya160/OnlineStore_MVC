<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineStore.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineStore.Web</a>

                <a class="navbar-brand" asp-area="" asp-controller="Accounts" asp-action="Register">Sign Up</a>

                <a class="navbar-brand" asp-area="" asp-controller="Accounts" asp-action="Login">Login</a>

                <div class="dropdown">
                    <button type="button" class="btn btn-warning dropdown-toggle" data-bs-toggle="dropdown">
                        Store
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">Category</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="SaleCategories" asp-action="Index">SaleCategories</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="SaleProducts" asp-action="Index">SaleProducts</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="StoreManagerPermissions" asp-action="Index">StoreManagerPermissions</a></li>

                        <li><a class="dropdown-item" asp-area="" asp-controller="StoreMangers" asp-action="Index">StoreManagers</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Stores" asp-action="Index">Stores</a></li>
                    </ul>
                </div>

                <div class="dropdown m-2">
                    <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown">
                        Users
                    </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-area="" asp-controller="Vendors" asp-action="Index">Vendor</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Addresses" asp-action="Index">Addresses</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="AdministratorPermissions" asp-action="Index">AdministratorPermissions</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Administrators" asp-action="Index">Administrators</a></li>
                </ul>
            </div>

                <div class="dropdown m-2">
                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown">
                        Shipping
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-area="" asp-controller="DeliverCarts" asp-action="Index">DeliverCarts</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="ShippingCompanies" asp-action="Index">ShippingCompanies</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="ShippingCompaniesPermissions" asp-action="Index">ShippingCompaniesPermissions</a></li>
                    </ul>
                </div>


                <div class="dropdown m-2">
                    <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown">
                        App Accounting
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-area="" asp-controller="DetalisInvoice" asp-action="Index">DetalisInvoice</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="InvoiceLines" asp-action="Index">InvoiceLines</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="InvoiceOrder" asp-action="Index">InvoiceOrder</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="InvoiceOrderLine" asp-action="Index">InvoiceOrderLine</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="InvoiceOrderOnlineLine" asp-action="Index">InvoiceOrderOnlineLine</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="PurchaseBills" asp-action="Index">PurchaseBills</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Suppliers" asp-action="Index">Suppliers</a></li>
                    </ul>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OnlineStore.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
